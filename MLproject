name: average_reward_cv

conda_env: requirements.yaml

entry_points:
  main:
    parameters:
      max_episodes: {type: int, default: 1000}
      environment: {type: string, default: 'gridworld'}
      algorithm: {type: string, default: 'n-step'}
      alpha: {type: float, default: 0.1}
      beta: {type: float, default: 0.1}
      n: {type: int, default: 1}
      lambda: {type: float, default: 0}
      seed: {type: int, default: 1}
    command: "python main.py
                --max-episodes {max_episodes}
                --environment {environment}
                --algorithm {algorithm}
                --alpha {alpha}
                --beta {beta}
                --n {n}
                --lambda {lambda}
                --seed {seed}"